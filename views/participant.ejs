	<% include ./partials/header %>
	
	<!-- What is -->
	<div id="whatis" class="content-section-b" style="border-top: 0">
		<div class="container">

			<div class="col-md-6 col-md-offset-3 text-center wrap_title">
				<h2>Information</h2>
								
			</div>
			<div class="col-md-offset-3 col-md-6">
				<form action='/<%=plan._id%>/member' method="POST">
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" name="member[name]" class="form-control" placeholder="Name" >
					</div>

					<div class="form-group">
						<label for="gender">Gender</label>
						<select name="member[gender]" class="form-control">
							<option></option>
						<option name='male'>Male</option>
						<option name='female'>female</option>
					</select>
					</div>

					<div class="form-group">
						<label for="age">Age</label>
						<input type="number" name="member[age]" class="form-control" placeholder="Age" min="1" max="150">
					</div>

					<div class="form-group">
						<label for="smokes">Smokes</label>
						<select name="member[smokes]" class="form-control">
							<option></option>
						<option name='male'>No</option>
						<option name='female'>Yes</option>
					</select>
					</div>
					<div class="form-group">
						<label for="height">Height</label>
						<input type="text" name="member[height]" class="form-control" placeholder="Height e.g 7ft">
					</div>
					<div class="form-group">
						<label for="weight">Weight</label>
						<input type="text" name="member[weight]" class="form-control" placeholder="Weight e.g 200lb or 50kg">
					</div>
					<input type='submit' value='Submit' class='btn btn-primary'>
					<a href='/<%=plan._id%>' class='btn btn-danger pull-right'>Cancel</a>
					
				</form>
			</div>

		</div>
	</div>
	

	
				
						<div class="morph-button wow pulse morph-button-inflow morph-button-inflow-1 hidden">
							<button type="button "><span></span></button>
						</div>
			
    <% include ./partials/footer %>
