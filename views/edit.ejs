	<% include ./partials/header %>
	
	<!-- What is -->
	<div id="whatis" class="content-section-b" style="border-top: 0">
		<div class="container">

			<div class="col-md-6 col-md-offset-3 text-center wrap_title">
				<h2>Information</h2>
								
			</div>
			<div class="col-md-offset-3 col-md-6">
				<form action="/<%=plan._id%>/<%=member._id%>?_method=PUT"  method="POST">
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" name="member[name]" class="form-control" placeholder="Name" value='<%= member.name %>'>
					</div>

					<div class="form-group">
						<label for="gender" >Gender</label>
						<select name="member[gender]"  class="form-control">
							<option></option>
						<option name='male'<% if(member.gender == 'Male'){ %> selected <% } %>>Male</option>
						<option name='female'<% if(member.gender == 'Female'){ %> selected <% } %>>Female</option>
					</select>
					</div>

					<div class="form-group">
						<label for="age">Age</label>
						<input type="number" name="member[age]" class="form-control" value='<%= member.age %>' placeholder="Age" min="1" max="150" >
					</div>

					<div class="form-group">
						<label for="smokes">Smokes</label>
						<select name="member[smokes]" class="form-control">
							<option></option>
						<option name='male' <% if(member.smokes == 'No'){ %> selected <% } %>>No</option>
						<option name='female' <% if(member.smokes == 'Yes'){ %> selected <% } %>>Yes</option>
					</select>
					</div>
					<div class="form-group">
						<label for="height">Height</label>
						<input type="text" name="member[height]" class="form-control" value='<%= member.height %>' placeholder="Height e.g 7ft">
					</div>
					<div class="form-group">
						<label for="weight">Weight</label>
						<input type="text" name="member[weight]" class="form-control" value='<%= member.weight %>' placeholder="Weight e.g 200lb or 50kg">
					</div>
					
				
							<input type='submit' value='Submit' class='btn  btn-primary'>
					
							<a href='/<%=plan._id%>' class='btn  btn-warning pull-right'>Cancel</a>
					
					
				</form>
					<div class='col-xs-4 col-xs-offset-4'>
						<form action="/<%=plan._id%>/participants/<%=member._id%>?_method=DELETE" method='POST'>
	    						<input type='submit' class='btn btn-xs btn-danger center-block' value='remove'>
	    					</form>
						
					</div>
							
					
			</div>

		</div>
	</div>
	

	
				
						<div class="morph-button wow pulse morph-button-inflow morph-button-inflow-1 hidden">
							<button type="button "><span></span></button>
						</div>
			
    <% include ./partials/footer %>
